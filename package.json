{
  "name": "@soccer/game-scheduler",
  "version": "1.0.0",
  "author": "Paul Edwards",
  "homepage": "https://pjedwards.github.io/game-scheduler/",
  "scripts": {
    "test": "node scripts/example.js",
    "start-scheduler": "parcel apps/scheduler/public/index.html --open",
    "start-simple-scheduler": "parcel apps/simple-scheduler/public/index.html --open",
    "build-scheduler": "parcel build apps/scheduler/public/index.html --dist-dir apps/scheduler/dist",
    "build-simple-scheduler": "parcel build apps/simple-scheduler/public/index.html --dist-dir apps/simple-scheduler/dist",
    "deploy": "rm -rf docs && mv build docs"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "last 2 versions",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@parcel/config-default": "next",
    "@parcel/packager-raw-url": "next",
    "@parcel/transformer-webmanifest": "next",
    "http-server": "^13.0.2",
    "parcel": "next"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "apis/*"
  ]
}
